<div class='quote {{size}}'>
  <blockquote class='text'>
    {{text}}
  </blockquote>
  <div class="quote_foot">
    <div class='author'>
      {{author}}
    </div>
    {{# source? }}
    <div class='source'>
      {{source}}
    </div>
    {{/ source? }}
  </div>
  {{# amendable? }}
  <ul class='actions'>
    <li class="amend">
      <a href='{{edit_path}}'>Amend</a>
    </li>
  </ul>
  {{/ amendable? }}
</div>