<h2><span>Amend a quote</span></h2>
<%= form_tag quote_path(@quote[:uid]), :id => 'edit_quote', :class => 'quote_form' do %>
  <input type='hidden' name='_method' value='put'></input>
  <label for="text">Quote</label>
  <textarea id="text" name="quote[text]"><%= @quote[:text] %></textarea>
  <label for="author">By</label>
  <input type="text" id="author" name="quote[author]" value="<%= @quote[:author] %>"/>
  <label for="source">From</label>
  <input type="text" id="source" name="quote[source]" value="<%= @quote[:source] %>"/>
  <input type="submit" value="Amend quote"/>
<% end %>
