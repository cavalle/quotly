<!DOCTYPE html>
<html lang='en'>
  <head>
    <title>Quotly</title>
    <meta charset='utf-8'/>
    <%= stylesheet_link_tag    'application' %>
    <%= javascript_include_tag 'application' %>
    <script src='/fonts/cufon-yui.js' type='text/javascript'></script>
    <script src='/fonts/marcelle_700.font.js' type='text/javascript'></script>
    <script type='text/javascript'>
      Cufon.replace('#content h2 span');
    </script>
  </head>
  <body>
    <div id='main'>
      <div id='header'>
        <h1>
          <a href='/'><span>Quotly</span></a>
        </h1>
        <div class='nav'>
          <% if current_user.present? %>
          Hi, <%= current_user[:nickname] %>! ~
          <a href='<%= new_quote_path %>'>Add new quote</a>
          ~
          <a href='<%= logout_path %>'>Logout</a>
          ~
          <a href='/<%= current_user[:nickname] %>'>Your quotes</a>
          <% else %>
          <a href='<%= login_path %>'>Login or Register</a>
          <% end %>
        </div>
      </div>
      <div id='content'>
        <%= yield %>
      </div>
      <div id='footer'>
      </div>
    </div>
    <script type="text/javascript">

      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-15625354-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

    </script>
  </body>
</html>
